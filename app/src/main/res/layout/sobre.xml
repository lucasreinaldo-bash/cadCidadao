<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sobre"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:padding="15dp"
            android:text="Este Aplicativo foi criado por Lucas Reinaldo, com o objetivo de entregar um projeto final para o curso de Programação de Computadores e Dispositivos Móveis.\n
\nAgredeço ao Instituto Federal de São Paulo e aos professores que ministraram o curso, por todo o conhecimento compartilhado." />
        />


    </LinearLayout>

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/magic_button_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:magic_button_size="50dp"
        app:button_icon="@drawable/facebook"
        app:button_icon_width="25dp"
        app:button_icon_height="25dp"
        app:hide_text="Facebook"
        app:icon_button_color="#375dda"
        android:layout_marginTop="10dp"
        app:expandable_area_color="#200cb7"/>

    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/magic_button_twiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:button_icon="@drawable/github"
        app:button_icon_height="25dp"
        app:button_icon_width="25dp"
        app:expandable_area_color="#200cb7"
        app:hide_text="GitHub"
        app:icon_button_color="#d0d4e2"
        app:magic_button_size="50dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/lu" />


</LinearLayout>