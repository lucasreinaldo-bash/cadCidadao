<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fifth_bg"
    android:orientation="vertical"
    tools:context=".Cadastrar">


    <ImageButton
        android:id="@+id/voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/seta"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="0dp"

        />

    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="395dp"
        android:layout_height="238dp"
        app:srcCompat="@drawable/cadlogo"
        tools:layout_editor_absoluteX="28dp"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/txt_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nome Completo"
        android:inputType="textPersonName"

        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/txt_cpf"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="CPF( apenas números)"
        android:inputType="number"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="292dp"

        />

    <EditText
        android:id="@+id/txt_telefone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Telefone (apenas números)"
        android:inputType="number"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="348dp"
        tools:ignore="MissingConstraints"
        />

    <EditText
        android:id="@+id/txt_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="406dp"

        />

    <ImageButton
        android:id="@+id/btn_salvar"
        android:layout_width="84dp"
        android:layout_height="63dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/validar"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="452dp" />

</LinearLayout>